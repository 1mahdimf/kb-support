        "Helpdesk",
		"Support",
		"Customer"
		"Support",
		"Support Desk",
		"Ticket System"
    ],
    "homepage": "https://kb-support.com",
    "license": "GNU GPL",
    "authors": [
        {
            "name": "KB Support",
            "email": "contact@kb-support.com",
            "homepage": "https://kb-support.com",
            "role": "Lead Developer"
        }
